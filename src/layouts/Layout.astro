---
export const prerender = false;

import Header from '../components/header1.astro';
import Footer from '../components/footer.astro';
import FlashMessage from '../components/FlashMessage.astro';
import "../styles/global.scss";

interface Props {
  title?: string;
  fullTitle?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
  ogType?: 'website' | 'article';
  noIndex?: boolean;
}

const SITE_NAME = "Men's Shed Townsville";

const {
  title = "",
  fullTitle = "",
  description = "",
  image = "",
  imageAlt = "",
  ogType = "website",
  noIndex = false,
} = Astro.props as Props;

const computedTitle = fullTitle ? fullTitle : (title ? `${SITE_NAME} | ${title}` : SITE_NAME);
const metaDescription = description || "Men's Shed Townsville community projects and events.";

const canonicalUrl = Astro.url?.href ?? "";
const ogImage = image ? new URL(image, Astro.url).href : "";
const twitterCard = ogImage ? "summary_large_image" : "summary";

/** Flash: login/logout banners */
type FlashType = 'success' | 'error' | 'info';
type Flash = { message: string; type: FlashType; dismissAfterMs?: number };

const params = Astro.url.searchParams;
const flashParam = params.get('flash');
let flash: Flash | null = null;

if (flashParam === 'welcome') {
  flash = { message: 'üëã Welcome back!', type: 'success', dismissAfterMs: 4000 };
} else if (flashParam === 'loggedOut') {
  flash = { message: '‚úÖ Successfully logged out', type: 'success', dismissAfterMs: 4000 };
} else if (flashParam === 'loginError') {
  flash = { message: '‚ö†Ô∏è Invalid email or password', type: 'error', dismissAfterMs: 6000 };
} else if (flashParam === 'custom') {
  // Optional generic flash via ?flash=custom&msg=...&type=success|error|info
  const rawMsg = params.get('msg') || '';
  const t = (params.get('type') || 'info') as FlashType;
  // Simple safety: trim and cap length
  const safeMsg = rawMsg.trim().slice(0, 200);
  if (safeMsg) flash = { message: safeMsg, type: ['success','error','info'].includes(t) ? t : 'info', dismissAfterMs: 5000 };
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#2a7f62" />

    <title>{computedTitle}</title>

    <!-- Canonical -->
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}

    <!-- Robots -->
    {noIndex && <meta name="robots" content="noindex,nofollow" />}

    <!-- Basic meta -->
    <meta name="description" content={metaDescription} />

    <!-- Open Graph -->
    <meta property="og:site_name" content={SITE_NAME} />
    <meta property="og:type" content={ogType} />
    {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}
    <meta property="og:title" content={computedTitle} />
    <meta property="og:description" content={metaDescription} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    {ogImage && imageAlt && <meta property="og:image:alt" content={imageAlt} />}

    <!-- Twitter -->
    <meta name="twitter:card" content={twitterCard} />
    <meta name="twitter:title" content={computedTitle} />
    <meta name="twitter:description" content={metaDescription} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap"
      rel="stylesheet"
    />

    <!-- (Perf) Remove global reCAPTCHA; include it only on pages that need it via <slot name="head" /> -->
    <slot name="head" />
  </head>
  <body>
    <Header currentPath={Astro.url.pathname} />
    <main id="main">
      <div id="flash-root"></div>
      {flash && <FlashMessage {...flash} />}
      <slot />
    </main>
    <Footer />
  </body>
</html>
