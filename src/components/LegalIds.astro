---
/**
 * Props:
 * - abn: string                   -> e.g. "12 345 678 901"
 * - acncUrl?: string              -> direct link to your ACNC register entry
 * - dgr?: boolean                 -> Deductible Gift Recipient endorsed?
 * - incNo?: string                -> Incorporated Association No. (e.g., "IA12345")
 * - fundraisingNo?: string        -> QLD fundraising licence/charity reg no. (if applicable)
 * - showCompactOnly?: boolean     -> show only the compact line (default true)
 * - class?: string
 */
const {
  abn,
  acncUrl = '/legal', // change to your ACNC link if you have it
  dgr = false,
  incNo,
  fundraisingNo,
  showCompactOnly = true,
  class: extraClass = ''
} = Astro.props;

const bits: string[] = [];
if (abn) bits.push(`ABN ${abn}`);
bits.push('Registered Charity (ACNC)');
if (dgr) bits.push('DGR endorsed');
if (incNo) bits.push(`Inc. Assoc. No ${incNo}`);
if (fundraisingNo) bits.push(`Fundraising No ${fundraisingNo}`);

const compact = bits.join(' · ');
---

<div class={`legal-ids ${extraClass}`}>
  <span class="compact">
    {compact} · <a href={acncUrl} rel="noopener">Verify</a>
  </span>

  {!showCompactOnly && (
    <ul class="detail">
      {abn && <li><strong>ABN:</strong> {abn}</li>}
      <li><strong>Registered Charity:</strong> <a href={acncUrl}>ACNC entry</a></li>
      {dgr && <li><strong>DGR:</strong> Endorsed (tax-deductible donations)</li>}
      {incNo && <li><strong>Incorporation No.:</strong> {incNo}</li>}
      {fundraisingNo && <li><strong>Fundraising licence:</strong> {fundraisingNo}</li>}
    </ul>
  )}
</div>
 